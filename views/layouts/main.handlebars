<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Meta tags -->
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Page title -->
  <title>Task Manager</title>

  <!-- CSS stylesheets -->
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,200;0,300;0,500;0,700;0,800;1,200&display=swap" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <!-- Axios library -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body>
  <div class="flex-column justify-space-around">
    <!-- Header -->
    <header class="w3-theme-l1 w3-bar display-flex justify-space-between align-center p-2">
      <h1>
        <span role="img" aria-label="taskpad">ðŸ“‹</span>
        <a href="/" class="w3-bar-item w3-button">Task Manager</a>
      </h1>
      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <button class="no-button" id="logout">logout</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>
    </header>

    <!-- Main content -->
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>

    <!-- Footer -->
    <footer class="w3-container w3-padding-32 w3-theme-l1 w3-center">
      <h4>Follow Us</h4>
      <a class="w3-button w3-large w3-teal" href="https://www.facebook.com/" title="Facebook" target="_blank"><i class="fa fa-facebook"></i></a>
      <a class="w3-button w3-large w3-teal" href="https://twitter.com/" title="Twitter" target="_blank"><i class="fa fa-twitter"></i></a>
      <a class="w3-button w3-large w3-teal" href="https://www.instagram.com/" title="Instagram" target="_blank"><i class="fa fa-instagram"></i></a>
      <a class="w3-button w3-large w3-teal w3-hide-small" href="https://au.linkedin.com/" title="Linkedin" target="_blank"><i class="fa fa-linkedin"></i></a>
      
    </footer>
  </div>
 

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
